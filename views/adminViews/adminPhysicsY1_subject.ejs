    <script>
      // Get the button element
      var btnAddResults = document.getElementById("submitButton");

      // Add click event listener to the button
      btnAddResults.addEventListener("click", function (event) {
        event.preventDefault(); // Prevent form submission

        // Get the table body element
        var tableBody = document.querySelector("#dataTable tbody");

        // Get the values from the input fields
        var indexNumber = document.getElementById("indexNo").value;
        var grade = document.getElementById("grade").value;

        // Create a new row and cells
        var newRow = document.createElement("tr");
        var indexCell = document.createElement("td");
        var numberCell = document.createElement("td");
        var resultCell = document.createElement("td");

        // Set the cell values
        indexCell.textContent = tableBody.children.length + 1; // Set the number sequentially
        numberCell.textContent = indexNumber;
        resultCell.textContent = grade;

        // Append the cells to the new row
        newRow.appendChild(indexCell);
        newRow.appendChild(numberCell);
        newRow.appendChild(resultCell);

        // Append the new row to the table body
        tableBody.appendChild(newRow);
      });

      $(document).ready(function () {
        // Attach click event handler to the button
        $("#submitButton").click(function () {
          const IndexNo = $("#indexNo").val();
          const Grade = $("#grade").val();
          const Semester = $("#semester").val();
          const SubjectName = $("#subjectName").val();
          const CourseCode = $("#courseCode").val();
          const Year = "1st Year";
          const Stream = "Physics";

          // Create an object with the data to send
          const data = {
            IndexNo,
            Grade,
            Semester,
            SubjectName,
            CourseCode,
            Year,
            Stream,
          };

          // Send an AJAX request to the server
          $.ajax({
            url: "/admin/Physics/1stYear",
            type: "POST",
            contentType: "application/json",
            data: JSON.stringify(data),
            success: function () {
